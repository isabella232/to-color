{
  "name": "@mapbox/to-color",
  "version": "2.0.0",
  "description": "Generate a consistent random color from an arbitrary string. Pass previously known colors to generate a harmonious palette.",
  "main": "index.js",
  "scripts": {
    "start": "serve",
    "test": "eslint index.js && jest",
    "jest-watch": "jest --watch"
  },
  "keywords": [
    "color",
    "string",
    "seed",
    "identifier"
  ],
  "author": "Mapbox",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "serve": "^11.3.2"
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "git add"
    ],
    "src/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mapbox/to-color.git"
  }
}
